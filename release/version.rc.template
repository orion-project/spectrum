FILETYPE       	1
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904B0"
        BEGIN
            VALUE "CompanyName",      "orion-project.org\0"
            VALUE "FileVersion",      "{v1}.{v2}.{v3}.{v4}\0"
            VALUE "InternalName",     "spectrum\0"
            VALUE "LegalCopyright",   "Chunosov N.I. (c) 2005-{year}\0"
            VALUE "OriginalFilename", "spectrum.exe\0"
            VALUE "ProductName",      "spectrum\0"
            VALUE "ProductVersion",   "{v1}.{v2}.{v3}.{v4}\0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1252 /* English */
    END
END
